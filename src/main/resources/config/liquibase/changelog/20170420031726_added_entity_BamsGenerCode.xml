<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity BamsGenerCode.
    -->
    <changeSet id="20170420031726-1" author="jhipster">
        <createTable tableName="bams_generic_code">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="varchar(50)">
                <constraints nullable="false" />
            </column>

            <column name="name" type="varchar(150)">
                <constraints nullable="true" />
            </column>

            <column name="description" type="varchar(150)">
                <constraints nullable="true" />
            </column>

            <column name="activated" type="bit">
                <constraints nullable="true" />
            </column>

            <column name="createdby" type="varchar(50)">
                <constraints nullable="true" />
            </column>

            <column name="createddate" type="date">
                <constraints nullable="true" />
            </column>

            <column name="lastmodifiedby" type="varchar(50)">
                <constraints nullable="true" />
            </column>

            <column name="lastmodifieddate" type="date">
                <constraints nullable="true" />
            </column>

            <column name="version_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="bams_generic_type_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
        <createTable tableName="bams_gener_code_bams_user">
            <column name="bams_users_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="bams_gener_codes_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="bams_gener_codes_id, bams_users_id" tableName="bams_gener_code_bams_user"/>
        
        <createTable tableName="bams_gener_code_bams_authority">
            <column name="bams_authorities_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="bams_gener_codes_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="bams_gener_codes_id, bams_authorities_id" tableName="bams_gener_code_bams_authority"/>
        
    </changeSet>
</databaseChangeLog>
